<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=\ , initial-scale=1.0">
    <title>To Do List</title>
    <link rel="stylesheet" href="css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Merriweather&display=swap" rel="stylesheet">

</head>

<body>


    <div class="box" id="heading">
        <h1>
            <%= kindOfDay %>
        </h1>
    </div>


    <div class="box">

        <!--route for deleting existing items-->

       
        <% newListItems.forEach(function(item){ %>

            <form action="/delete" method="post">
            <div class="items">
        <input type="checkbox" name="check" value="<%=item._id %>" onchange="this.form.submit()">
            <p>
                <%= item.name %>
            </p>
    </div>
</form>
   <% }) %>


        <!-- route for adding new items -->
        <form class="items" action="/" method="post" autocomplete="off">

            <input class="text" type="text" name="newItem" placeholder="New Item">

            <button type="submit" name="list" value="<%=kindOfDay%>">+</button>
        </form>


        </div>


        <script scr="app.js">
        </script>

</body>

</html>